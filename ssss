<script>
  const gradeData = {
    1: { range: "1000‚Äì1200", grafts: 1100 },
    2: { range: "1200‚Äì1500", grafts: 1350 },
    3: { range: "1500‚Äì2200", grafts: 1850 },
    4: { range: "2200‚Äì2800", grafts: 2500 },
    5: { range: "2800‚Äì3500", grafts: 3150 },
    6: { range: "3500‚Äì4500", grafts: 4000 },
    7: { range: "4500‚Äì6000", grafts: 5250 }
  };

  // grade image selection
  document.querySelectorAll("#gradePreview img").forEach(img => {
    img.addEventListener("click", function() {
      document.querySelectorAll("#gradePreview img").forEach(i => i.classList.remove("active"));
      this.classList.add("active");
      const grade = this.dataset.grade;
      const data = gradeData[grade];
      document.getElementById("grafts").value = data.grafts;
      document.getElementById("graftRange").innerText = "üí° Suggested Graft Range: " + data.range;
      document.getElementById("gradePreview").dataset.selected = grade;
    });
  });

  function calculateCost() {
    const name = document.getElementById("username").value.trim();
    const city = document.getElementById("city").value.trim();
    const grafts = parseInt(document.getElementById("grafts").value);
    const rate = parseInt(document.getElementById("technique").value);
    const phone = document.getElementById("phone").value.trim();
    const grade = document.getElementById("gradePreview").dataset.selected;

    if (!phone) {
      alert("üìû Please enter your phone number to continue.");
      return;
    }
    if (!grafts || grafts <= 0) return;

    const total = grafts * rate;
    const minMarket = total - 10000;
    const maxMarket = total + 40000;

    document.getElementById("greeting").innerText = name ? `Hi ${name},` : "Hi üëã";
    document.getElementById("total").innerText = total.toLocaleString();
    document.getElementById("marketPriceRange").innerText = `${minMarket.toLocaleString()} ‚Äì ${maxMarket.toLocaleString()}`;
    document.getElementById("techniqueDisplay").innerText = document.getElementById("technique").selectedOptions[0].text;
    document.getElementById("cityDisplay").innerText = city || "‚Äî";
    document.getElementById("gradeDisplay").innerText = grade ? "Grade " + grade : "Not Selected";
    document.getElementById("result").style.display = "block";
    document.getElementById("result").scrollIntoView({ behavior: "smooth" });

    const email = document.getElementById("email").value.trim();
    const lead = { name, city, phone, email, grade, grafts, rate, total };
    console.log("Lead Sent to CRM:", lead);
  }
</script>
